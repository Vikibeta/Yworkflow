@charset "UTF-8";

/**
 * $author rainszhang
 */
@import "variables";
@import "mixins";

//
// Autocomplete
// --------------------------------------------------
.lbf-autocomplete {
	&-suggestions {
		overflow: hidden;
		border: 1px solid rgba(0, 0, 0, .2);
		border: 1px solid #D9D9D9\9;
		outline: none;
		background-color: #FFF;

		*border: 1px solid #D9D9D9;
		@include border-radius($border-radius-base);
		@include box-shadow(0 1px 2px rgba(0, 0, 0, .2));

		strong {
			font-weight: bold;
			font-family: $simsun;
			color: #000;
		}
	}

	&-suggestion {
		overflow: hidden;
		padding: 0 12px;
		font-size: 14px;
		font-family: $simsun;
		line-height: 32px;
		white-space: nowrap;
		cursor: pointer;
		a{
			display: block;
		}
		a:hover {
			color: inherit;

		}
	}

	&-no-suggestion {
		padding: 4px 6px;
	}

	&-selected {
		background: #F0F0F0;
	}

	&-group {
		line-height: 32px;
		strong {
			display: block;
			overflow: hidden;
			padding: 0 12px;
			font-size: 14px;
			white-space: nowrap;
			color: $gray8;
			background: #F7F7F7;
		}
	}

	/* 循环输出 */
	&-group-a, &-group-b, &-group-c, &-group-d {
	}
}
